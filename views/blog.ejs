<%- include('partials/header.ejs') %>
<!-- Published Blogs Section -->
<div class="container">
    <div class="row">
        <h1>Blog</h1>
    </div>
    <div class="row">
        <% for (let i=0; i < titles.length; i++) { %>
            <div class="card mx-auto my-5" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= titles[i] %>
                    </h5>
                    <p class="card-text">
                        <%= body[i] %>
                    </p>
                    <a href="/blog/<%= titles[i] %>" class="btn btn-warning">Read</a>
                </div>
            </div>
            <% } %>
    </div>
</div>
<%- include('partials/footer.ejs') %>
